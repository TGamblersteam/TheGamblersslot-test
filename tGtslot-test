    <script>
        const fruits = ["üçí", "üçã", "üçä", "üçâ", "üçé", "üçá", "üçå"];

        function spinReels() {
            let reels = document.querySelectorAll(".reel");
            let results = [];

            reels.forEach(reel => {
                let randomFruit = fruits[Math.floor(Math.random() * fruits.length)];
                reel.innerText = randomFruit;
                results.push(randomFruit);
            });

            checkWin(results);
        }

        function checkWin(results) {
            let counts = {};
            results.forEach(fruit => {
                counts[fruit] = (counts[fruit] || 0) + 1;
            });

            let maxCount = Math.max(...Object.values(counts));

            if (maxCount >= 3) {
                let reward = maxCount * 5;
                let rewardElement = document.getElementById("reward");
                rewardElement.innerText = (parseFloat(rewardElement.innerText) + reward).toFixed(2);
                alert(`Kazandƒ±nƒ±z! ${maxCount} aynƒ± sembol: +${reward} tGt`);
            }
        }

        document.getElementById("spin").addEventListener("click", spinReels);

        async function connectWallet() {
            if (window.ethereum) {
                try {
                    let web3 = new Web3(window.ethereum);
                    const accounts = await window.ethereum.request({ method: "eth_requestAccounts" });
                    alert("C√ºzdan Baƒülandƒ±: " + accounts[0]);
                } catch (error) {
                    alert("C√ºzdan baƒülantƒ±sƒ± ba≈üarƒ±sƒ±z: " + error.message);
                }
            } else {
                alert("Metamask veya Web3 uyumlu bir c√ºzdan y√ºkleyin!");
            }
        }

        document.getElementById("connect-wallet").addEventListener("click", connectWallet);
    </script>

